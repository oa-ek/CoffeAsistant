@using CafeAssistiant.Models
@model IEnumerable<CafeAssistiant.Models.ApplicationUser>

<h2>Users</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>City</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Email</td>
                <td>@user.City</td>
                <td>@user.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
